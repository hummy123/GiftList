
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new events">
		<meta name="author" content="Humza Shahid">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
			<h1>Add item</h1>
			{{#if authorised}}
				<a href="/logout">Log out</a>
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<main>
		<form method="post" enctype="multipart/form-data" action="/newitem/{{event_id}}">
			<label>Item Name <input type="text" name="name" /></label>
			<label>Item Price <input type="number" name="price" min="0.00" step="0.01" /></label>
			<label>Item Link <input type="url" name="link" /> </label>
			<label>Item Image <input type="file" name="image" accept="image/*" /></label>
			<input type="submit" />
		</form>
	</main>
	</body>
</html>
